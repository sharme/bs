doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="/javascripts/jquery-1.12.3.min.js")
    script(src="/javascripts/jquery.form.js")
    script(src="/javascripts/utils.js")
    script(src="/javascripts/angular.min.js")
    script(src="/javascripts/modules/shops.js")
    block header
      #header.header
        a(class='button', href='google.com') BuyBS
        li
          a(class="homepage", id="homepage", href="/") 主页
        if user_name
            #logged_in
                | #{user_name} |
                a(class="logout_btn", id="logout_btn", href="/index/logout") 登出
        else
            #login_out
               a(class='login_btn', id='login_btn') 登陆 |
               a(class='register_btn', id='register_btn', href='/index/register') 注册
  body(ng-app='shops')
        #search
            #search_bg
            //p Welcome to #{title}
            #search_box
                a(id='search_box-logo' class='search_box-logo', href='google.com') BuyBS
                a(id='search_box-city')上海 [切换城市]
                input(type='text' id='search_box-text' ng-model='searchKeyword' name='search_box-text')
                input(type='submit' value="搜索" id='search_box-submit')
    #login_popup
      div#login_popup-header 登陆
      #login_form
          | 手机号
          input(type='text', name='phoneNumber', id='login_form-phoneNumber', value='')
          br
          | 密码
          input(type='password', id='login_form-password', name='password', value='')
          br
          div#login_invalid
            |提示: 手机号码或密码不正确, 请从新尝试.
          input(type='submit' id='register_form-submit', value='登陆')
    block register
    block homepage
    block content
